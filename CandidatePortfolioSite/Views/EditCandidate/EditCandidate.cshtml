@model CandidatePortfolioSite.Models.Candidates

@{
    ViewData["Title"] = "EditCandidates";
}

<h1>Edit Game</h1>

<h4>Games</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCandidates">


            <div class="form-group">
                <label asp-for="FirstName" class"control-label"></label>
                <input asp-for="FirstName" class="form-control" placeholder="Game Name Required Here" required />

            </div>
            <div class="form-group">
                <label asp-for="Surname" class"control-label"></label>
                <input asp-for="Surname" class="form-control" placeholder="Game Description Required Here" required />



            </div>


            <div class="form-group">
                <label asp-for="Age" class"control-label"></label>
                <input asp-for="Age" class="form-control" placeholder="Link to Image Required Here" required />




            </div>

            <div class="form-group">
                <label asp-for="AboutMe" class"control-label"></label>
                <input asp-for="AboutMe" class="form-control" placeholder="Link to Image Required Here" required />




            </div>

            <div class="form-group">
                <label asp-for="Email" class"control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Link to Image Required Here" required />




            </div>

            <div class="form-group">
                <label asp-for="gps_long" class"control-label"></label>
                <input asp-for="gps_long" class="form-control" placeholder="Link to Image Required Here" required />




            </div>

            <div class="form-group">
                <label asp-for="gps_lat" class"control-label"></label>
                <input asp-for="gps_lat" class="form-control" placeholder="Link to Image Required Here" required />




            </div>

            <div class="form-group">
                <label asp-for="GitHubLink" class"control-label"></label>
                <input asp-for="GitHubLink" class="form-control" placeholder="Link to Image Required Here" required />




            </div>

           


            <div class="form-group">
                <input type="submit" value="EditGame" class="btn btn-primary" />

            </div>

        </form>
    </div>

</div>
<div>

    @Html.ActionLink("Back to List", "Games")
</div>